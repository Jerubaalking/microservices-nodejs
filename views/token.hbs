<script>
  document.getElementById('appTokenRequestForm').addEventListener('submit',
  function(event) { event.preventDefault(); const appName =
  document.getElementById('appName').value; const appKey =
  document.getElementById('appKey').value; // Retrieve user key from
  localStorage const userKey = localStorage.getItem('userKey'); // Make AJAX
  request to get app token fetch('http://localhost:3000/get-app-token', {
  method: 'POST', headers: { 'Content-Type': 'application/json',
  'Authorization': 'Bearer ' + userKey, // Include user key in headers }, body:
  JSON.stringify({ appName, appKey }), }) .then(response => response.json())
  .then(data => { alert('App Token: ' + data.appToken); }) .catch(error => {
  console.error('Error:', error); }); });
</script>

